[loggers]

keys = root,rvlistener,rvweb,rvapi,csrlistener

[handlers]
keys = root,rvlist_file,rvweb_file,rvapi_file,csrlist_file


[formatters]
keys = default

[logger_root]
level = DEBUG
propagate = 0
qualname = root
handlers = root,syslog_localhost

[logger_rvlistener]
level = DEBUG
propagate = 0
qualname = rvlistener
handlers = rvlist_file,syslog_localhost

[logger_rvweb]
level = DEBUG
propagate = 0
qualname = rvweb
handlers = rvweb_file,syslog_localhost

[logger_rvapi]
level = DEBUG
propagate = 0
qualname = rvapi
handlers = rvapi_file

[logger_csrlistener]
level = DEBUG
propagate = 0
qualname = csrlistener
handlers = csrlist_file,syslog_localhost

[logger_syslog_localhost]
level = CRITICAL
propagate = 0
qualname = syslog_localhost
handlers = syslog_localhost,syslog_localhost

[handler_root]
class = StreamHandler
stream = sys.stdout
args = (sys.stdout,)
level = DEBUG
formatter = default

[handler_rvlist_file]
class = handlers.TimedRotatingFileHandler
interval = midnight
backupcount = 5
args = ("/opt/TopPatch/var/log/rvlist_file.log",)
level = DEBUG
formatter = default

[handler_rvweb_file]
class = handlers.TimedRotatingFileHandler
interval = midnight
backupcount = 5
args = ("/opt/TopPatch/var/log/rvweb_file.log",)
level = DEBUG
formatter = default

[handler_rvapi_file]
class = handlers.TimedRotatingFileHandler
interval = midnight
backupcount = 5
args = ("/opt/TopPatch/var/log/rvapi_file.log",)
level = DEBUG
formatter = default

[handler_csrlist_file]
class = handlers.TimedRotatingFileHandler
interval = midnight
backupcount = 5
args = ("/opt/TopPatch/var/log/csrlist_file.log",)
level = DEBUG
formatter = default

[formatter_default]
format = %(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt = %Y-%m-%d %H:%M:%S

